{% extends '@FOPReviews/layout.html.twig' %}

{% block title %}{{ organization.title }}{% endblock %}

{% block body %}
    <div class="content-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <article class="organization">
                        <header>
                            {#<div class="date"><time datetime="{{ organization.created|date('c') }}">{{ organization.created|date('l, F j, Y') }}</time></div>#}
                            <h2>{{ organization.title }}</h2>
                        </header>
                        <img style="max-width: 400px;margin-bottom: 30px;" src="{{ organization.image }}" alt="{{ organization.title }} image not found" class="large" />
                        <div>
                            <p>{{ organization.content }}</p>
                        </div>
                    </article>

                    <section class="comments" id="comments">
                        <section class="previous-comments">
                            <h3>Отзывы</h3>
                            {% include '@FOPReviews/Review/index.html.twig' with { 'reviews': reviews } %}
                            <h3>Добавить отзыв</h3>
                            {{ render(controller('FOPReviewsBundle:Review:new',{ 'orgId': organization.id })) }}
                        </section>
                    </section>
                </div>
                <div class="col-lg-3">
                    <div class="sidebar">
                        <h2>Новое</h2>
                        <div class="item-new">
                            <h3>Автосалон тест</h3>
                        </div>
                        <h2>Последние отзывы</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}